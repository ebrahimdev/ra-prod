# Production Environment Configuration for Auth Server
# Deploy this file as .env in the auth-server directory on production server

# Server Configuration
HOST=127.0.0.1
PORT=5000
DEBUG=False
FLASK_ENV=production

# Database Configuration (relative path - works in production working directory)
DATABASE_URL=sqlite:///instance/auth.db

# JWT Configuration
JWT_SECRET_KEY=prod-auth-jwt-secret-key-change-this-now
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400

# Security
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/auth-server.log