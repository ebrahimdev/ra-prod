# Production Environment Configuration for ra-prod
# This file contains production environment variables
# Copy this to your server and customize as needed

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Auth Server Configuration
AUTH_SERVER_HOST=127.0.0.1
AUTH_SERVER_PORT=5000
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400

# RAG Server Configuration  
RAG_SERVER_HOST=127.0.0.1
RAG_SERVER_PORT=5001

# Database Configuration
DATABASE_URL=sqlite:///instance/auth.db

# CORS Configuration (allow your domain in production)
CORS_ORIGINS=http://45.76.61.43,https://45.76.61.43

# File Upload Configuration
MAX_CONTENT_LENGTH=52428800  # 50MB in bytes
UPLOAD_FOLDER=uploads

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/ra-prod.log

# Production Security Settings
SESSION_COOKIE_SECURE=False  # Set to True if using HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax