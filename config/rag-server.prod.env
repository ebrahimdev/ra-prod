# Production Environment Configuration for RAG Server
# Deploy this file as .env in the rag directory on production server

# Server Configuration
HOST=127.0.0.1
PORT=5001
DEBUG=False
FLASK_ENV=production

# File Upload Configuration
MAX_CONTENT_LENGTH=52428800  # 50MB
UPLOAD_FOLDER=uploads

# Security
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/rag-server.log

# Model Configuration (if using local models)
MODEL_CACHE_DIR=/opt/ra-prod/models
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2