{
  "name": "texgpt",
  "displayName": "TeXGPT",
  "description": "Brainstorm your academic research papers with your specialist AI assistant",
  "version": "0.0.1",
  "publisher": "texgpt",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "TeXGPT",
      "properties": {
        "texgpt.development": {
          "type": "boolean",
          "default": false,
          "description": "Enable development mode (uses localhost servers instead of production)"
        }
      }
    },
    "commands": [
      {
        "command": "texgpt.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "texgpt.signupGoogle",
        "title": "TeXGPT: Sign Up with Google"
      },
      {
        "command": "texgpt.signupWithEmail",
        "title": "TeXGPT: Sign Up with Email"
      },
      {
        "command": "texgpt.loginWithEmail",
        "title": "TeXGPT: Login with Email"
      },
      {
        "command": "texgpt.logout",
        "title": "TeXGPT: Logout"
      },
      {
        "command": "texgpt.openChat",
        "title": "TeXGPT: Open Chat"
      },
      {
        "command": "texgpt.notifications",
        "title": "Notifications",
        "icon": "resources/icons/notification.svg"
      },
      {
        "command": "texgpt.library",
        "title": "Library",
        "icon": "resources/icons/library.svg"
      },
      {
        "command": "texgpt.moreOptions",
        "title": "More Options",
        "icon": "$(ellipsis)"
      }
    ],
    "views": {
      "texgpt": [
        {
          "id": "texgpt.view",
          "name": "",
          "type": "webview",
          "when": "true"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "texgpt.notifications",
          "when": "view == texgpt.view",
          "group": "navigation@1"
        },
        {
          "command": "texgpt.library",
          "when": "view == texgpt.view",
          "group": "navigation@2"
        },
        {
          "command": "texgpt.moreOptions",
          "when": "view == texgpt.view",
          "group": "navigation@3"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "texgpt",
          "title": "TeXGPT",
          "icon": "$(book)"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "build:webview": "cd webview-ui && npm run build",
    "watch:webview": "cd webview-ui && npm run watch",
    "dev:webview": "cd webview-ui && npm run dev"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "axios": "^1.6.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^6.30.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.104.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "vite": "^6.3.6"
  }
}
