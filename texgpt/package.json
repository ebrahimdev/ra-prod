{
  "name": "texgpt",
  "displayName": "TeXGPT",
  "description": "Brainstorm your academic research papers with your specialist AI assistant",
  "version": "0.0.1",
  "publisher": "texgpt",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "TeXGPT",
      "properties": {
        "texgpt.development": {
          "type": "boolean",
          "default": false,
          "description": "Enable development mode (uses localhost servers instead of production)"
        }
      }
    },
    "commands": [
      {
        "command": "texgpt.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "texgpt.signupGoogle",
        "title": "TeXGPT: Sign Up with Google"
      },
      {
        "command": "texgpt.signupWithEmail",
        "title": "TeXGPT: Sign Up with Email"
      },
      {
        "command": "texgpt.loginWithEmail",
        "title": "TeXGPT: Login with Email"
      },
      {
        "command": "texgpt.logout",
        "title": "TeXGPT: Logout"
      }
    ],
    "views": {
      "texgpt": [
        {
          "id": "texgpt.view",
          "name": "",
          "type": "webview",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "texgpt",
          "title": "TeXGPT",
          "icon": "$(book)"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "@vscode/webview-ui-toolkit": "^1.4.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.25.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}